<!DOCTYPE html>
<html lang="en" ng-app="editable">
<head>
    <meta charset="utf-8">
    <title>Story</title>
     <%= stylesheet_link_tag 'page_ninja/page_ninja_default'%>
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>

<body ng-controller="PageCtrl">
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <a class="brand" href="#">Project name</a>
            <div class="nav-collapse collapse">
                <ul class="nav">
                    <li ng-repeat="mn in page.menu"><a href="#"><editable-string bind="mn.text"/></a></li>
                    <li><a href="#" ng-click="addMore('page.menu')">Add More</a></li>
                </ul>
                <form class="navbar-form pull-right">
                    <input class="span2" type="text" placeholder="Email">
                    <input class="span2" type="password" placeholder="Password">
                    <button type="submit" class="btn">Sign in</button>
                </form>
            </div><!--/.nav-collapse -->
        </div>
    </div>
</div>

<div class="container">

    <!-- Main hero unit for a primary marketing message or call to action -->
    <div class="hero-unit">
        <h1><editable-string bind="page.title"/></h1>
        <h1>{{page.title}}</h1>
        <p><editable-text bind="page.dialog"/></p>
        <p><a class="btn btn-primary btn-large">Learn more &raquo;</a></p>
    </div>

    <!-- Example row of columns -->
    <div class="row">
        <div class="span4" ng-repeat="portfolio in page.portfolios">
            <h2><editable-string bind="portfolio.title"/></h2>
            <p><editable-text bind="portfolio.description"/></p>
            <p><a class="btn" href="#">View details &raquo;</a></p>
        </div>
    </div>

    <hr>
        <a href="#" class="btn" ng-click="addMore('page.portfolios')">Add More</a>
    <hr>

    <footer>
        <p>{{page}}</p>
    </footer>

</div> <!-- /container -->
<%= javascript_include_tag 'page_ninja/page_ninja_default' %>
</body>
</html>
